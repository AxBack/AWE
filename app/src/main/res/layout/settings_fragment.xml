<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/settings_background"
    android:divider="@drawable/generic_margin_divider"
    android:orientation="vertical"
    android:padding="@dimen/generic_margin"
    android:showDividers="beginning|middle|end">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preset" />

        <Spinner
            android:id="@+id/settings_preset_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/add_cluster"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:selectableItemBackground"
        app:cardBackgroundColor="@color/settings_card_background"
        app:cardCornerRadius="2dp"
        app:cardElevation="@dimen/generic_elevation"
        app:contentPadding="@dimen/generic_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:drawableBottom="@android:drawable/ic_menu_add"
            android:gravity="center_horizontal"
            android:text="Add cluster" />

    </android.support.v7.widget.CardView>

</LinearLayout>