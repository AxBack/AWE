<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/add_cluster"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:selectableItemBackground"
    app:cardBackgroundColor="@color/settings_card_background"
    app:cardCornerRadius="@dimen/generic_card_corner_radius"
    app:cardElevation="@dimen/generic_elevation"
    app:contentPadding="@dimen/generic_margin">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:drawableBottom="@drawable/ic_add_box"
        android:drawableTint="#767676"
        android:gravity="center_horizontal"
        android:text="Add cluster" />

</android.support.v7.widget.CardView>